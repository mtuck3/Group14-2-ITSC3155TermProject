<h1>New Task</h1>

<%= form_for :task, url: tasks_path do |f| %>
    <p>
        <%= f.label :task, url: tasks_path %><br>
        <%= f.text_field :task %>
    </p>
    
    <p>
        <%= f.label :description %><br>
        <%= f.text_field :description %>
    </p>
    
    <p>
        <%= f.label :date %><br>
        <%= f.text_field :date %>
    </p>
    
    <p>
        <%= f.submit %>
    </p>
<% end %>